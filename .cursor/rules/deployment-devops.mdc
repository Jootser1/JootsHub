```yaml
# docker-compose.yml
version: '3.8'

services:
  # PostgreSQL Database
  postgres:
    image: postgres:15-alpine
    container_name: joots-postgres
    environment:
      POSTGRES_DB: ${POSTGRES_DB:-joots}
