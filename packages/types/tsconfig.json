{
    "compilerOptions": {
      "composite": true,
      "declaration": true,
      "declarationMap": false,
      "emitDeclarationOnly": true,
      "outDir": "dist",
      "rootDir": ".",
      "strict": true,
      "moduleResolution": "node",
      "target": "ES2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["*.ts"]
  }